mini_nstep       = 20000                              # Number of steps for minimization
mini_Tol         = 100.0                             # Minimization energy tolerance

nstep            = 200000                            # Number of steps to run
dt               = 0.0005                            # Time-step (ps)

nstout           = 5000                              # Writing output frequency (steps)
nstdcd           = 5000                              # Writing coordinates trajectory frequency (steps)

coulomb          = LJPME                               # Electrostatic cut-off method
ewald_Tol        = 0.0001                            # Ewald error tolerance
vdw              = LJPME                             # vdW cut-off method
#r_on             = 1.0                               # Switch-on distance (nm)
r_off            = 0.9                               # Switch-off distance (nm)

temp             = 305.55                               # Temperature (K)
fric_coeff       = 5                                 # Friction coefficient for Langevin dynamics

drude_temp       = 1.0                               # Drude Temperature (K)
drude_fric_coeff = 20                                # Drude Friction coefficient for Langevin dynamics
#drude_hardwall   = 0.0                              # Drude Hardwall

pcouple          = yes                               # Turn on/off pressure coupling
p_ref            = 1.0                               # Pressure (Pref or Pxx, Pyy, Pzz; bar)
p_type           = isotropic                         # MonteCarloBarostat type
p_freq           = 100                               # Pressure coupling frequency (steps)

cons             = HBonds                            # Constraints mehtod

rest             = yes                               # Turn on/off restraints
fc_bb            = 400.0                             # Positional restraint force constant for protein backbone (kJ/mol/nm^2)
fc_sc            = 40.0                              # Positional restraint force constant for protein side-chain (kJ/mol/nm^2)
